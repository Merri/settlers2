---
import BaseHead from '../../components/BaseHead.astro'
import BlogHeader from '../../components/BlogHeader.astro'
import { Generator } from '../../components/WorldEditor/Generator'

const title = 'The Settlers II.net Map Generator'
const description = 'Generate maps for The Settlers II Gold Edition or Return to the Roots!'
const permalink = 'https://settlers2.net/map-generator'
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} permalink={permalink} />
		<link rel="stylesheet" href="/blog.css" />
		<style>
			.editor {
				margin: 0 4rem;
			}
			.content {
				padding-bottom: 8rem;
			}
			.header {
				align-items: center;
				display: flex;
				flex-wrap: wrap;
				justify-content: space-between;
				white-space: nowrap;
			}
		</style>
	</head>
	<body>
		<BlogHeader />
		<main class="editor" id="main">
			<article class="content">
				<div class="header">
					<h1>Map Generator</h1>
					<a href="/map-generator/legacy">Old map generator</a>
				</div>
				<Generator client:load />
			</article>
		</main>
		<script async defer src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
		<noscript><img src="https://queue.simpleanalyticscdn.com/noscript.gif" alt="" /></noscript>
	</body>
</html>
