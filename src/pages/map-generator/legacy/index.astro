---
import BaseHead from '../../../components/BaseHead.astro'
import BlogHeader from '../../../components/BlogHeader.astro'
import { MapGenerator } from '../../../components/MapGenerator'

const title = 'The Settlers II.net Map Generator'
const description = 'Generate maps for The Settlers II Gold Edition and Return to the Roots'
const permalink = 'https://settlers2.net/map-generator/legacy'
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} permalink={permalink} />
		<link rel="stylesheet" href="/blog.css" />
		<style>
			.content {
				padding-bottom: 8rem;
			}
		</style>
	</head>
	<body>
		<BlogHeader />
		<main class="layout" id="main">
			<article class="content">
				<p>This is a legacy project. Try <a href="/map-generator">the new Map Generator!</a></p>
				<MapGenerator client:only />
			</article>
		</main>
		<script async defer src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
		<noscript><img src="https://queue.simpleanalyticscdn.com/noscript.gif" alt="" /></noscript>
	</body>
</html>
