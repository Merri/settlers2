{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"$/*": ["src/*"],
			"$layouts/*": ["src/layouts/*"]
		},
		"target": "esnext",
		"jsx": "preserve",
		"jsxImportSource": "preact",
		"strict": true,
		"skipLibCheck": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "public"]
}
